<form action="/expenses" method="POST">
  <h1 class="mb-1 restaurant-show-title">Add New Expense</h1>
  <div class="container">
    <div class="row">
      <div class="col-12 col-md-10 mx-auto">
        <div class="d-flex justify-content-end mb-3">
          <button class="btn btn-info" type="submit">Submit</button>
          <a class="btn btn-outline-info ml-2" href="/">Back</a>
        </div>

        <div class="row mb-1">
          <label for="name" class="col-sm-3 col-form-label col-form-label-sm text-secondary">
            <i class="pr-2 me-1"></i>名稱：
          </label>
          <div class="col-sm-7">
            <input type="text" class="form-control form-control-sm" placeholder="名稱" name="name" id="name" required>
            <div class="invalid-feedback">需要填寫花費名稱</div>
          </div>
        </div>

        <div class="row mb-1">
          <label for="date" class="col-sm-3 col-form-label col-form-label-sm text-secondary">
            <i class="pr-2 me-1"></i>時間：
          </label>
          <div class="col-sm-7">
            <input type="date" class="form-control form-control-sm" placeholder="2021/07/24" name="date" id="date"
              required>
            <div class="invalid-feedback">需要填寫花費時間</div>
          </div>
        </div>

        <div class="row mb-1">
          <label for="category" class="col-sm-3 col-form-label col-form-label-sm text-secondary">
            <i class="pr-2 me-1"></i>類別：
          </label>
          <div class="col-sm-7">
            <select type="text" class="form-control form-control-sm" placeholder="選擇類別" name="category" id="category"
              required>
              <option value="" disabled selected>選擇花費類別</option>
              <option value="food">餐飲食品</option>
              <option value="entertain">休閒娛樂</option>
              <option value="transport">交通出行</option>
              <option value="household">家居物業</option>
              <option value="others">其他</option>
            </select>
            <div class="invalid-feedback">需要填寫花費類別</div>
          </div>
        </div>

        <div class="row mb-1">
          <label for="cost" class="col-sm-3 col-form-label col-form-label-sm text-secondary">
            <i class="pr-1 me-1"></i>金額：
          </label>
          <div class="col-sm-7">
            <input type="number" class="form-control form-control-sm" placeholder="花費金額" name="cost" id="cost" required>
            <div class="invalid-feedback">需要填寫花費金額</div>
          </div>
        </div>

        <div class="row mb-1">
          <label for="comment" class="col-sm-3 col-form-label col-form-label-sm text-secondary">
            <i class="pr-2 me-1"></i>備註：
          </label>
          <div class="col-sm-7">
            <input type="text" class="form-control form-control-sm" placeholder="備註/地點/細項" name="comment" id="comment">
          </div>
        </div>
      </div>
    </div>
  </div>
</form>
<form action="/expenses" method="POST">
  <h1 class="mb-1 restaurant-show-title">Add New Expense</h1>
  <div class="container">
    <div class="row">
      <div class="col-12 col-md-10 mx-auto">
        <div class="d-flex justify-content-end mb-3">
          <button class="btn btn-info" type="submit">Submit</button>
          <a class="btn btn-outline-info ml-2" href="/">Back</a>
        </div>

        <div class="row mb-1">
          <label for="name" class="col-sm-3 col-form-label col-form-label-sm text-secondary">
            <i class="fas fa-utensils pr-2 me-1"></i>名稱：
          </label>
          <div class="col-sm-7">
            <input type="text" class="form-control form-control-sm" placeholder="名稱..." name="name" id="name" required>
            <div class="invalid-feedback">Name is required.</div>
          </div>
        </div>

        <div class="row mb-1">
          <label for="name_en" class="col-sm-3 col-form-label col-form-label-sm text-secondary">
            <i class="fas fa-utensils pr-2 me-1"></i>時間：
          </label>
          <div class="col-sm-7">
            <input type="text" class="form-control form-control-sm" placeholder="時間" name="date" id="date" required>
            <div class="invalid-feedback">Name is required.</div>
          </div>
        </div>

        <div class="row mb-1">
          <label for="category" class="col-sm-3 col-form-label col-form-label-sm text-secondary">
            <i class="fas fa-utensils pr-2 me-1"></i>類別：
          </label>
          <div class="col-sm-7">
            <input type="text" class="form-control form-control-sm" placeholder="類別..." name="category" id="category"
              required>
            <div class="invalid-feedback">Name is required.</div>
          </div>
        </div>

        <div class="row mb-1">
          <label for="rating" class="col-sm-3 col-form-label col-form-label-sm text-secondary">
            <i class="fas fa-star fa-xs pr-1 me-1"></i>金額：
          </label>
          <div class="col-sm-7">
            <input type="number" class="form-control form-control-sm" placeholder="評分..." name="cost" id="cost"
              required>
            <div class="invalid-feedback">Name is required.</div>
          </div>
        </div>

        <div class="row mb-1">
          <label for="location" class="col-sm-3 col-form-label col-form-label-sm text-secondary">
            <i class="fas fa-map-marker-alt pr-2 me-1"></i>備註：
          </label>
          <div class="col-sm-7">
            <input type="text" class="form-control form-control-sm" placeholder="備註..." name="comment" id="comment">
          </div>
        </div>
      </div>
    </div>
  </div>
</form>